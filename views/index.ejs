<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Management System</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Employee Management System</h1>

  
  <form action="/" method="get">
    <label for="search">Search by Name:</label>
    <input type="text" id="search" name="search" value="<%= searchTerm %>" placeholder="Enter name">
    <input type="submit" value="Search">
  </form>

  
  <form action="/" method="get" style="margin-top: 10px;">
    <label for="sortBy">Sort by:</label>
    <select id="sortBy" name="sortBy">
      <option value="id">ID</option>
      <option value="name">Name</option>
      <option value="age">Age</option>
      <option value="dob">DOB</option>
      <option value="salary">Salary</option>
      <option value="dept">Dept</option>
    </select>
    <input type="submit" value="Sort">
  </form>

  <table border="1">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Age</th>
      <th>DOB</th>
      <th>Salary</th>
      <th>Dept</th>
      <th>Actions</th>
    </tr>
    <% employees.forEach(employee => { %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.age %></td>
        <td><%= employee.dob %></td>
        <td><%= employee.salary %></td>
        <td><%= employee.dept %></td>
        <td>
          <a href="/edit/<%= employee.id %>">Edit</a>
          <a href="/delete/<%= employee.id %>" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</a>
        </td>
      </tr>
    <% }); %>
  </table>
  
  <p><a href="/add">Add New Employee</a></p>
</body>
</html>
